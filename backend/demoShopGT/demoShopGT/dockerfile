# ---- Build stage ----
FROM maven:3.9-eclipse-temurin-21 AS build
WORKDIR /app
COPY . .
RUN mvn -q -DskipTests clean package

# ---- Run stage ----
FROM eclipse-temurin:21-jre
WORKDIR /app
# Copiem JAR-ul rezultat din stage-ul anterior
COPY --from=build /app/target/*.jar app.jar

# Render expune PORT implicit 10000; Spring ia ${PORT} datoritÄƒ server.port=${PORT:8080}
EXPOSE 8080
ENTRYPOINT ["java","-jar","/app/app.jar"]
